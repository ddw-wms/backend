# Environment Variables Documentation
# Copy this file to .env and fill in the values

# =================== DATABASE ===================
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# =================== JWT AUTHENTICATION ===================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRY=8h

# =================== SERVER ===================
PORT=3000
NODE_ENV=production

# =================== CORS ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-frontend-domain.com,https://ddwms.vercel.app

# Frontend URL (used for CORS in production)
FRONTEND_URL=https://your-frontend-domain.com

# =================== LOGGING ===================
# Options: debug, info, warn, error
LOG_LEVEL=warn

# =================== CLOUDFLARE R2 (Optional - for cloud backups) ===================
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET=wms-backups

# =================== SUPABASE (Optional - if using Supabase) ===================
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
